#------------------------------------------------
# setup cloudflare cert for import
#------------------------------------------------
(cloudflare) {
    tls {
        dns cloudflare {env.CLOUDFLARE_API_TOKEN}
        resolvers 1.1.1.1
    }
}

#------------------------------------------------
# caddy network
#------------------------------------------------
openwebui.{$BASE_DOMAIN} {
    reverse_proxy openwebui:8080
    import cloudflare
}
